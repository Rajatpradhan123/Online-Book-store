<body>
    
  <%- include('./partials/nav') %>
 

 <div class="Container2"> <% Books.forEach((Book,index)=> { %>
  <div class="card m-3 "   style="width: 18rem;height:max-content; text-decoration: none; display: flex; align-items: center; justify-content: space-around; ">
  <div class="card-body">
    <h4 class="card-title"><%= Book.title %></h4>
    <h6 class="card-subtitle"><%= Book.Author %></h6>
    <p class="card-text"><%= Book.Price %></p>
    <p class="card-text"><%= Book.quantity %></p>
    <p class="card-text"><%= Book.Category %></p>
    <p class="card-text"><%= Book.Description %></p>
    <a href="/delete/<%= index %>" class="card-link text-danger text-decoration-none"  >Delete</a>
    <a href="#" class="card-link color-danger text-decoration-none">Update</a>
  </div>
</div>   <% }) %></div>
    
  
 
      
  
  
    


